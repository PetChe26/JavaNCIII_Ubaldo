import java.util.Scanner;
public class Tasksheet_1_1_8 {
    public static void main(String[] args) {

        Scanner sc = new Scanner (System.in);

        System.out.print("Enter first parameter:");
        int first = sc.nextInt();

        System.out.print("Enter second parameter:");

        int second = sc.nextInt();
        System.out.print("Enter third parameter:");

        int third = sc.nextInt();
        System.out.print("\n An array of parameters: ["+first+","+second+","+third+"]\n\n");

        for (int firstarray=1;firstarray<=first;firstarray++)
        {
            System.out.print(+firstarray+" ");
        }

        System.out.print("\n");
        for (int secondarray=1;secondarray<=second;secondarray++)

        {
            System.out.print(+secondarray+" ");
        }

        System.out.print("\n");
        for (int thirdarray=1;thirdarray<=third;thirdarray++)

        {
            System.out.print(+thirdarray+" ");
        }

        System.out.println("\n");
        int a;
        int sumfirstarray = 0;
        for (a=1;a <= first;a++) {
            sumfirstarray += a;
        }

        int b;
        int sumsecondarray = 0;
        for (b=1; b <= second;b++) {
            sumsecondarray += b;
        }

        int c;
        int sumthirdarray = 0;
        for (c=1; c <= third; c++) {
            sumthirdarray += c;
        }

        int TotalSum = sumfirstarray + sumsecondarray + sumthirdarray;
        System.out.println("The sum of Array of Parameters is: ("+sumfirstarray+"+"+sumsecondarray+"+"+sumthirdarray+"+"+TotalSum);
    }
